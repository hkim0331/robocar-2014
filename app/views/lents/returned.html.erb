<h1>返却</h1>

<%= form_for(@lent) do |f| %>
  <% if @lent.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@lent.errors.count, "error") %> prohibited this lent from being saved:</h2>

      <ul>
      <% @lent.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label 'car #' %><br />
    <%= f.number_field :car_id, disabled: :disabled %>
  </div>

  <%= f.hidden_field :condition, value: Lent::Free %>

  <div class="field">
    <%= f.label '貸し出し' %><br />
    <%= f.date_select :lent_on, disabled: :disabled %>
  </div>

  <div class="field">
    <%= f.label '返却予定' %><br />
    <%= f.date_select :willback_on, disabled: :disabled %>
  </div>

  <div class="field">
    <%= f.label '返却日' %><br />
    <%= f.date_select :back_on %>
  </div>

  <div class="field">
    <%= f.label '学生番号' %><br />
    <%= f.text_field :sid, disabled: :disabled %>
  </div>

  <div class="field">
    <%= f.label '備考' %><br />
    <%= f.text_area :note, :size => "20x4" %>
  </div>

  <div class="actions">
    <%= f.submit "返却" %>
  </div>
<% end %>


<%= link_to 'Show', @lent %> |
