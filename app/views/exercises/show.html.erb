<p id='notice'><%= notice %></p>

<p>
  <b>Sid:</b>
  <%= @exercise.sid %>
</p>

<p>
  <b>File Name:</b>
  <%= File.basename @exercise.path %>
</p>

<% if Rails.env == 'development' %>
<% fn = 'app/views/exercises/show.html.erb' %>
<% else %>
<% fn = @exercise.path %>
<% end %>

<pre>
<% File.foreach(fn) do |line| %>
<%= line.chomp %>
<% end %>
</pre>

<%= link_to 'Edit', edit_exercise_path(@exercise) %> |
<%= link_to 'Back', exercises_path %>
